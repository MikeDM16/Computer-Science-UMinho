				</scenes>
				<camera name="teapotCamara" />
				<lights>
					<light name="Sun" />
				</lights>
				<materialMaps>
					<map fromMaterial="*" toMaterial="silhouette" toLibrary="Texture" />
				</materialMaps>
			</pass>
			<pass class="default" name="normal">
				<scenes>
					<scene name="teapot" />
				</scenes>
				<camera name="teapotCamara" />
				<viewport name="LeftViewport" />
				<materialMaps>
					<map fromMaterial="*" toMaterial="normal_object" toLibrary="Texture" />
				</materialMaps>
			</pass>
		</pipeline>

	</pipelines>

	<interface>
		<window label="settings" >
			<pipelineList label="Parametros" />
			<var label="Edge Size" type="COLOR" context="Texture::edges" 
					component="edgeSize" def="min=0.010 max=0.100 step=0.0002" />
			<var label="Toon levels" type="COLOR" context="Texture::toon" 
					component="toonlevels" def="min=1 max=4 step=-1" />	
			<var label="Hatching" type="COLOR" context="Texture::hatching"
					component="hatching" def="min=1 max=10 step=1" />	
			<var label="HatchingV" type="COLOR" context="Texture::hatchingV"
					component="hatching" def="min=1 max=10 step=1" />		
			<var label="pixel_height" type="COLOR" context="Texture::pixel" 
					component="pixel_height" def="min=1 max=30 step=0.5" />		
			<var label="pixel_width" type="COLOR" context="Texture::pixel" 
					component="pixel_width" def="min=1 max=30 step=0.5" />
			<var label="tech_Color" type="COLOR" context="Texture::tech-ilustration" 
					component="tech_Color" def="min=1 max=2 step=1" />
		</window>
	</interface>

</project>