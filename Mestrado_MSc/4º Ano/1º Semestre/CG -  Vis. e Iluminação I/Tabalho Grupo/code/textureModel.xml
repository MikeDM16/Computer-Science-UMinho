			</pass>
			<pass class="default" name="normal">
				<scenes>
					<scene name="sphere" />
				</scenes>
				<camera name="MainCamera" />
				<viewport name="LeftViewport" />
				<materialMaps>
					<map fromMaterial="*" toMaterial="normal_texture" toLibrary="Texture" />
				</materialMaps>
			</pass>
		</pipeline>

		<pipeline name="toon - fries" >
			<pass class="default" name="toon" >
				<scenes>
					<scene name="fries" />
				</scenes>
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<materialMaps>
					<map fromMaterial="*" toMaterial="toon" toLibrary="Texture" />
				</materialMaps>
			</pass>
			<pass class="default" name="normal">
				<scenes>
					<scene name="fries" />
				</scenes>
				<camera name="MainCamera" />
				<viewport name="LeftViewport" />
				<materialMaps>
					<map fromMaterial="*" toMaterial="normal_object" toLibrary="Texture" />
				</materialMaps>
			</pass>
		</pipeline>

		<pipeline name="toon - bowling" >
			<pass class="default" name="hatchingL" >
				<scenes>
					<scene name="bowling" />
				</scenes>
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<materialMaps>
					<map fromMaterial="*" toMaterial="toon" toLibrary="Texture" />
				</materialMaps>
			</pass>
			<pass class="default" name="normal">
				<scenes>
					<scene name="bowling" />
				</scenes>
				<camera name="MainCamera" />
				<viewport name="LeftViewport" />
				<materialMaps>
					<map fromMaterial="*" toMaterial="normal_object" toLibrary="Texture" />
				</materialMaps>
			</pass>
		</pipeline>

		<pipeline name="tech - fries" >
			<pass class="default" name="tech-ilustration" >
				<scenes>
					<scene name="fries" />
				</scenes>
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<materialMaps>
					<map fromMaterial="*" toMaterial="tech-ilustration" toLibrary="Texture" />
				</materialMaps>
			</pass>
			<pass class="default" name="normal">
				<scenes>
					<scene name="fries" />
				</scenes>
				<camera name="MainCamera" />
				<viewport name="LeftViewport" />
				<materialMaps>
					<map fromMaterial="*" toMaterial="normal_object" toLibrary="Texture" />
				</materialMaps>
			</pass>
		</pipeline>

		<pipeline name="tech - bowling" >
			<pass class="default" name="tech-ilustration" >
				<scenes>
					<scene name="bowling" />
				</scenes>
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<materialMaps>
					<map fromMaterial="*" toMaterial="tech-ilustration" toLibrary="Texture" />
				</materialMaps>
			</pass>
			<pass class="default" name="normal">
				<scenes>
					<scene name="bowling" />
				</scenes>
				<camera name="MainCamera" />
				<viewport name="LeftViewport" />
				<materialMaps>
					<map fromMaterial="*" toMaterial="normal_object" toLibrary="Texture" />
				</materialMaps>
			</pass>
		</pipeline>

		<pipeline name="toonify - terra" >
			<pass class="default" name="toonify" >
				<scenes>
					<scene name="sphere" />
				</scenes>
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<materialMaps>
					<map fromMaterial="*" toMaterial="toonify" toLibrary="Texture" />
				</materialMaps>
			</pass>
			<pass class="default" name="normal">
				<scenes>
					<scene name="sphere" />
				</scenes>
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<viewport name="LeftViewport" />
				<materialMaps>
					<map fromMaterial="*" toMaterial="normal_texture" toLibrary="Texture" />
				</materialMaps>
			</pass>
		</pipeline>

		<pipeline name="toonify - tela" >
			<pass class="default" name="toonify" >
				<scenes>
					<scene name="plane" />
				</scenes>
				<camera name="planeCamara" />
				<lights>
					<light name="Sun" />
				</lights>
				<materialMaps>
					<map fromMaterial="*" toMaterial="toonify" toLibrary="Texture" />
				</materialMaps>
			</pass>
			<pass class="default" name="normal">
				<scenes>
					<scene name="plane" />
				</scenes>
				<camera name="planeCamara" />
				<lights>
					<light name="Sun" />
				</lights>
				<viewport name="LeftViewport" />
				<materialMaps>
					<map fromMaterial="*" toMaterial="normal_texture" toLibrary="Texture" />
				</materialMaps>
			</pass>
		</pipeline>

		<pipeline name="textures - pixel" >
			<pass class="default" name="pixel" >
				<scenes>
					<scene name="sphere" />
				</scenes>
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<materialMaps>
					<map fromMaterial="*" toMaterial="pixel" toLibrary="Texture" />
				</materialMaps>
			</pass>
			<pass class="default" name="normal">
				<scenes>
					<scene name="sphere" />
				</scenes>
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<viewport name="LeftViewport" />
				<materialMaps>
					<map fromMaterial="*" toMaterial="normal_texture" toLibrary="Texture" />
				</materialMaps>
			</pass>
		</pipeline>

		<pipeline name="silhouette - fries" >
			<pass class="default" name="silhouette" >
				<scenes>
					<scene name="fries" />
				</scenes>
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<materialMaps>
					<map fromMaterial="*" toMaterial="silhouette" toLibrary="Texture" />
				</materialMaps>
			</pass>
			<pass class="default" name="normal">
				<scenes>
					<scene name="fries" />
				</scenes>
				<camera name="MainCamera" />
				<viewport name="LeftViewport" />
				<materialMaps>
