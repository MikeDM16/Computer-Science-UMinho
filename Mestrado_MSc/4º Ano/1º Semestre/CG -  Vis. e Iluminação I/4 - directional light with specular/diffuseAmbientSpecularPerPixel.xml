<?xml version="1.0" ?>
<project name="D+A+S Light Per Vertex" >
	<assets><!-- width="512" height="512" -->
		<scenes>
			<scene name="MySceneC" param="UNITIZE">
				<file name="geom.obj"/>
			</scene>
		</scenes>
		
		<viewports>
			<viewport name="MainViewport">
				<CLEAR_COLOR r="1.0" g="1.0" b="1.0" />
			</viewport>
		</viewports>
		
		<cameras>
			<camera name="MainCamera" >
				<viewport name="MainViewport" />
				<TYPE value="PERSPECTIVE"/>
				<FOV value=60/>
				<NEAR value= 0.001/>
				<FAR value= 10/>
				<POSITION x=-1.2 y=1.2 z=-1.2 />
				<VIEW x=0.5 y=-0.7 z=0.5 />
			</camera>
		</cameras>
		
		<lights>
			<light name="Sun">
				<POSITION x=0 y=0.5 z=0 />
				<DIRECTION x=0 y=0 z=-1/>
				<SPOT_DIRECTION x=0 y=-1 z=0/>
				<SPOT_CUTOFF value = 0.7/>
			</light>
		</lights>
		
		<materialLibs>
			<materialLib filename="lighting.mlib" />
		</materialLibs>
	</assets>
	
	<pipelines>
		<pipeline name="lighting" default="true">
			<pass class="default" name="pass1">
				<scenes>
					<scene name="MySceneC" />
				</scenes>
				<camera name="MainCamera" />
				<lights>
					<light name="Sun" />
				</lights>
				<injectionMaps>
					<map toMaterial="*">
						<shader fromMaterial ="diffAmbSpecPerPixel" fromLibrary="Lighting" />
					</map>
				</injectionMaps>
			</pass>
		</pipeline>
	</pipelines>
</project>